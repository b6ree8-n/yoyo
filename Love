<audio id="bgMusic" src="https://www.bensound.com/bensound-music/bensound-romantic.mp3"></audio>
<audio id="laughSound" src="https://www.soundjay.com/human/laugh-1.mp3"></audio>

<script>
const noBtn=document.getElementById("noBtn");
const yesBtn=document.getElementById("yesBtn");
const laugh=document.getElementById("laughSound");
const music=document.getElementById("bgMusic");
const message=document.getElementById("loveMessage");

document.body.addEventListener("click",()=>{
    music.play().catch(()=>{});
},{once:true});

noBtn.addEventListener("mouseover",()=>{
    const x=Math.random()*(window.innerWidth-120);
    const y=Math.random()*(window.innerHeight-120);
    noBtn.style.left=x+"px";
    noBtn.style.top=y+"px";
    laugh.currentTime=0;
    laugh.play();
});

yesBtn.addEventListener("click",()=>{
    document.body.style.background="linear-gradient(135deg,#ff0844,#ffb199)";
    message.style.display="block";
    startConfetti();
});

function startConfetti(){
    setInterval(()=>{
        const conf=document.createElement("div");
        conf.classList.add("confetti");
        conf.style.left=Math.random()*100+"vw";
        conf.style.background=["#ff0","#ff4d6d","#fff","#00f5d4"][Math.floor(Math.random()*4)];
        document.body.appendChild(conf);
        setTimeout(()=>conf.remove(),3000);
    },150);
}
</script>

